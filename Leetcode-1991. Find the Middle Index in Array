class Solution {
public:
    int findMiddleIndex(vector<int>& nums) {
            int size = nums.size();
        for (int i = 0; i < size; i++) {
            int sum1 = 0;
            int sum2 = 0;
            for (int j = 0; j < i; j++) {
                sum1 = sum1 + nums[j];
            }
            for (int k = i + 1; k < size; k++) {
                sum2 = sum2 + nums[k];
            }
            if (sum1 == sum2) {
                return i;
            }
        }
        return -1;
    }
};
